<%= form_with(model: cat, local: true) do |form| %>
  <%= render partial: 'shared/errors', locals: {object: cat} %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: button_class('success') %>
  </div>
<% end %>
